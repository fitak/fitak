{
	"name": "nextras/orm",
	"type": "library",
	"description": "Nextras Orm framework",
	"keywords": ["orm", "database", "nextras"],
	"homepage": "https://github.com/nextras/orm",
	"license": "MIT",
	"authors": [
		{ "name": "Nextras Project", "homepage": "https://github.com/nextras/orm/graphs/contributors" }
	],
	"support": {
		"issues": "https://github.com/nextras/orm/issues"
	},
	"require": {
		"php": ">=5.4",
		"nette/caching":    "~2.2",
		"nette/reflection": "~2.2",
		"nette/utils":      "~2.2",
		"nextras/dbal":     "~1.0",
		"oodle/inflect":    "~0.2"
	},
	"require-dev": {
		"tracy/tracy":      "~2.3",
		"nette/bootstrap":  "~2.3",
		"nette/tester":     "~1.4",
		"mockery/mockery":  "~0.9"
	},
	"autoload": {
		"psr-4": { "Nextras\\Orm\\": "src/" },
		"classmap": ["src/exceptions.php"]
	},
	"autoload-dev": {
		"classmap": [
			"tests/cases",
			"tests/inc"
		]
	},
	"extra": {
		"branch-alias": {
			"dev-master": "1.1-dev"
		}
	}
}
